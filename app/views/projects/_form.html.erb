<%= form_for(@project) do |f| %>
  <%= render 'shared/errors', object: @project %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 7, class: "form-control" %>
  </div>

  <div class="form-group short">
    <%= f.label :target_pledge_amount %>
    <%= f.number_field :target_pledge_amount, class: "form-control" %>
  </div>

  <div class="form-group short">
    <%= f.label :website %>
    <%= f.text_field :website, class: "form-control" %>
  </div>

   <div class="form-group short">
    <%= f.label :team_members %>
    <%= f.text_field :team_members, class: "form-control" %>
  </div>

  <div class="form-group short">
    <%= f.label :pledging_ends_on %>
    <%= f.date_field :pledging_ends_on, class: "form-control" %>
  </div>

  <div class="form-group short">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <%= f.submit class: "btn btn-lg btn-primary"  %>
<% end %>
