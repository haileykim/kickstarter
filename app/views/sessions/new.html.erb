<div class="container">
<h2>Log In</h2>

<%= form_tag(session_path) do %>

  <div class="form-group short">
    <%= email_field_tag :email, nil, required: true, placeholder: 'Email', class: "form-control" %>
  </div>

  <div class="form-group short">
    <%= password_field_tag :password, nil, required: true, placeholder: 'Password', class: "form-control" %>
  </div>

    <%= submit_tag 'Log me up!', class: "btn btn-success" %>

<% end %>
<br>
<p><strong>New to Kickstarter <%= link_to 'Sign up!', signup_path %></strong></p>
</div>